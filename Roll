    <title>Document</title>
    ,<style>
        *{
            margin: 0;
            padding: 0;
        }
        ul{
            list-style: none;
        }
        #container{
            height: 300px;
            width: 320px;
            border:1px solid;
            overflow: hidden;
            position: relative;
            margin: 100px auto;
        }
        #tab{
            width: 440px;
            position: absolute;
            left: 0;
            top: 0;

        }
        #tab li{
            float: left;
            height: 100px;
            width: 100px;
            background: #000;
            color: #fff;
            font-size: larger;
            margin-right: 10px;
            text-align: center;
            line-height: 100px;
        }
        #arrow{
            position: absolute;
            bottom: 10px;
            left: 50%;
            margin-left:-65px ;
        }
        #arrow span{
            display: block;
            float: left;
            height: 30px;
            width: 60px;
            background: #609;
            color: #fff;
            line-height: 30px;
            text-align: center;
