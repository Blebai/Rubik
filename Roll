<body>
    <div id="container">
        <ul id="tab">
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
        </ul>
        <div id="arrow">
            <span id="left">向左</span>
            <span id="right">向右</spanid>
        </div>
    </div>
    <script>
        var oTab = document.getElementById('tab');
        var aLeft = document.getElementById('left');
        var aRight = document.getElementById('right');
        oTab.innerHTML += oTab.innerHTML;
        oTab.style.width = oTab.offsetWidth*2 + 'px';
        var speed;
        setInterval(function(){
            oTab.style.left = oTab.offsetLeft + speed + 'px';
            if(-oTab.offsetLeft >= oTab.offsetWidth / 2){
                oTab.style.left = '0px';
            }
            else if(oTab.offsetLeft >= 0){
                oTab.style.left = -oTab.offsetWidth / 2 + 'px';
            }
        },30);
        aRight.onclick = aLeft.onclick = function(){
            if(this === aRight){
                speed = 10;
            }
            else{
                speed = -10;
            }
        };
    </script>
</body>
