<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>选项卡</title>
    <style>
        *{
            margin: 0;
            padding: 0;
        }
        ul{
            list-style: none;
        }
        #container{
            height: 300px;
            width: 400px;
            background: lightgrey;
            border: 1px solid;
            margin: 100px auto;
        }
        #tab{
            height: 30px;
            border-bottom: 1px solid;
            
             overflow: hidden;
        }
        #tab li{
            float: left;
            background: lightskyblue;
            color: mediumblue;
            line-height: 30px;
            text-align: center;
            width: 100px;
            margin-right: 10px;
           cursor: pointer;
        }
        #tab .selected{
            background:#ffa5;
            color: #000;
        }
        #content div{
            display: none;
        }
        #content .selected{
            display: block;
        }


    </style>

</head>
<body>
    <div id="container">
        <ul id="tab">
            <li class="selected">HTML</li>
            <li>CSS</li>
            <li>Javascript</li>
        </ul>
        <div id="content">
            <div class="selected">11</div>
            <div>22</div>
            <div>333</div>
        </div>
    </div>
    <script>
        var oUl = document.getElementById('tab');
        var aLi = oUl.getElementsByTagName('li');
        var oContent = document.getElementById('content');
        var aDiv = oContent.getElementsByTagName('div');
        for(var i = 0; i < aLi.length ;i++){
            aLi[i].index = i;
            aLi[i].onclick = function(){
                for(var j = 0 ; j <aLi.length;j++){
                    aLi[j].className = '';
                    aDiv[j].className = '';
                }
                this.className = "selected";
                aDiv[this.index].className = 'selected';
            };
        }






    </script>
</body>
